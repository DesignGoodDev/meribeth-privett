/*=== text legibility for timeshow overlap ==*/
.timeshow--overlayed .hero__content__wrapper{
  box-shadow: inset 0 -120px 120px -120px rgba(0,0,0,0.4);
}


/*=== Hero Scroll ==*/
.index-sections > .shopify-section:not(:first-child) .scroll_icon_wrap{
  display: none;
}

.scroll_icon_wrap {
  text-align: center;
  position: absolute;
  margin-left: auto;
  margin-right: auto;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 400;
}
.scroll_link{
  display: block;
  position: absolute;
  text-align: center;
  left: 50%;
  width: 250px;
  margin-left: -125px;
  bottom: 0px;
  padding-bottom: 20px;
  padding-top: 20px;
  height: 60px;
  &:hover .scroll_icon{
    opacity: 1;
  }
  &:focus{
    outline: none;
  }
}

.scroll_icon {
  opacity: 0.9;
  position: absolute;
  left: 50%;
  bottom: 30px;
  margin-left: -20px;
  color: #fff;
}

.wide-image .scroll__link{
  position: absolute;
  bottom: 0;
}

/*================ Index Collection ================*/

.index-collection{
  position: relative;
  overflow: hidden;
  text-align: center;
}

.index__collection__title{
  color: $color-text-dark;
  margin-bottom: 20px;
  margin-top: 20px;
  font-size: rem(22px * $font-adjust-body);
  @include media-query($widescreen){
    margin-top: 35px;
  }
}
.index__collection__description{
  margin-top: -20px;
}

.index-collection.index--gray {
  background-color: $color-text;
  color: #EBE7E4;

  .product-grid-item {
    box-shadow: none;
  }

  .index__collection__title,
  .name_wrapper,
  .price_wrapper {
    color: #EBE7E4;
  }

}

/*  Index collection slideshow */
.index-collection,
.index-reviews{
  .flickity-button {
    background: $transparent;
  }
  .flickity-button:hover {
    background: $transparent;
  }
  .flickity-button:focus {
    outline: none;
    box-shadow: none;
  }
  .flickity-button-icon {
    fill: $color-text-dark;
  }
  .flickity-prev-next-button{
    bottom: 30px;
    height: 100%;
    width: 70px;
    top: 45%;
    opacity: 0;
    transition: opacity 0.4s ease-out;
  }
  .flickity-button:disabled {
    opacity: 0 !important;
  }

  &:hover .flickity-prev-next-button{
    opacity: 0.2;
    transition: opacity 0.4s ease-out;
    &:hover{
      opacity: 1;
    }
  }
  .flickity-prev-next-button.next{
    right: -60px;
  }
  .flickity-prev-next-button.previous{
    left: -60px;
  }
  .grid{
    margin-left: -15px;
    margin-right: -15px;
    @include media-query($small){
      margin-left: -5px;
      margin-right: -15px;
    }
    @include media-query($medium){
      margin-right: -30px;
    }
  }
  .grid__item{
    padding-left: 15px;
    padding-right: 15px;
    @include media-query($small){
      padding-left: 5px;
      padding-right: 5px;
    }
  }
}
.index-collection .flickity-prev-next-button.next{
  @include media-query($medium-down){
    top: -30px;
    right: -6px;
    opacity: 0.2;
    width: 45px;
  }
}
.index-reviews .flickity-prev-next-button.next{
  @include media-query($medium-down){
    top: -60px;
    right: -6px;
    opacity: 0.2;
    width: 45px;
  }
}

.reviews--1,
.reviews--2,
.reviews--3,
.index-collection--1,
.index-collection--2,
.index-collection--3,
.index-collection--4{
  @include media-query($large-up){
    .flickity-prev-next-button{
      display: none;
    }
    .flickity-enabled.is-draggable .flickity-viewport {
      cursor: auto;
    }
    .flickity-enabled.is-draggable .flickity-viewport.is-pointer-down {
      cursor: auto;
    }
  }
}

.template-index{
  .index-collection,
  .index-reviews{
    .wrapper{
      @include media-query($large-up){
        max-width: 1280px;
        padding: 0 80px;
      }
    }
  }
}

/*================ Map ================*/

.map--display-map .map__image {
  display: none !important;
}
.map__image{
  position: relative;
}

.map--load-error {
  @include media-query($large-up) {
    width: 50%;
    margin: 0 auto;
  }

  .errors {
    width: 100%;
  }
}

.map__container{
  min-height: 100%;
}

/*================ Logos ================*/

.logo-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  align-content: center;
  flex-wrap: wrap;
}

.logo-bar__item {
  display: inline-block;
  width: 155px;
  margin: 10px 0;
  @include media-query ($small) {
    width: 70px;
    margin: 10px 15px;
  }
  @include media-query ($medium) {
    width: 110px;
    margin: 10px 15px;
  }
  @include media-query ($large) {
    width: 125px;
    margin: 10px 15px;
  }
  @include media-query ($widescreen) {
    width: 155px;
    margin: 10px 15px;
  }
}

/*================ Index Timeline ================*/

/*  Trick the editor for block position */
.timeshow{
  padding-top: 300px;
  margin-top: -300px;
}

.index-timeline{
  position: relative;
  z-index: 200;
}

.js .index-timeline{
  .timeshow__wrapper{
    opacity: 0;
    transition: opacity 0.3s linear;
  }
  .flickity-enabled.timeshow__wrapper{
    opacity: 1;
  }
}

.timeshow__block{
  width: 85%;
  padding-left: 30px;
  padding-right: 15px;
  @include media-query($medium) {
    width: 45%;
  }
  @include media-query($large) {
    width: 33.33%;
    padding-left: 60px;
  }
  @include media-query($widescreen) {
    width: 25%;
    padding-left: 60px;
  }
}

.timeshow__images{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}

.timeshow__image{
  width: 50%;
}
.timeshow--border .timeshow__image{
  border: 5px solid $color-text-dark;
}
.timeshow__image--two{
  margin-left: 6%;
}
.timeshow__date{
  position: relative;
  padding-top: 7px;
  padding-bottom: 7px;
  margin-bottom: 20px;
  color: $color-text;
  &:after{
    content: '';
    height: 3px;
    background: $color-border;
    left: 0;
    bottom: -10px;
    position: absolute;
    overflow: hidden;
    z-index: 0;
    width: 30px;
  }
}
.index--gray.timeshow--offset .timeshow__date{
  color: $color-body;
  &:after{
    background: $color-body-light;
    height: 6px;
    bottom: -3px;
  }
}
.index--white.timeshow--offset .timeshow__date{
  color: $color-body;
  &:after{
    background: $color-body;
    height: 6px;
    bottom: -3px;
  }
}
.index-timeline.timeshow--offset{
  padding: 0 0 15px 0;
}

.index-timeline .grid {
  @include media-query($small) {
    margin-left: -30px;
    .grid__item {
      padding-left: 30px;
    }
  }
}

/* ---- Custom flickity index timeline ---- */

.timeshow__wrapper{
  .flickity-button {
    color: #fff;
    background: $transparent;
  }
  .flickity-button:hover {
    background: $transparent;
  }
  .flickity-button:focus {
    outline: none;
    box-shadow: none;
  }

  .flickity-prev-next-button {
    width: 90px;
    height: 300px;
    transform: none;
    top: 57px;
    display: flex;
    align-items: center;
    .flickity-button-icon {
      position: absolute;
      width: 30px;
      left: initial;
      right: initial;
      top: initial;
    }
    @include media-query($medium-down) {
      display: none;
    }
  }
  .flickity-prev-next-button.previous {
    left: 0px;
    justify-content: flex-start;
  }
  .flickity-prev-next-button.next {
    right: 0px;
    justify-content: flex-end;
  }
  .flickity-button-icon {
    fill: $color-text-dark;
  }
  .timeshow--offset &{
    .flickity-prev-next-button {
      top: 0;
    }
    .flickity-button-icon {
      fill: #fff;
    }
  }
}

/*================ index-slidehow ================*/

.slideshow__slide{
  position: relative;
}

.slideshow__slide img {
  max-width: 100%;
}

.use_screen_full .slideshow__slide{ height: 100vh; }
.use_screen_three_quarters .slideshow__slide{ height: 75vh; }
.use_screen_two_thirds .slideshow__slide{ height: 66vh; }
.use_screen_one_half .slideshow__slide{ height: 50vh; }
.use_screen_one_third .slideshow__slide{ height: 33vh; }
.use_screen_one_fifth .slideshow__slide{ height: 20vh; }

.homepage-slideshow.use_screen_full{ min-height: 100vh; }
.homepage-slideshow.use_screen_three_quarters{ min-height: 75vh; }
.homepage-slideshow.use_screen_two_thirds{ min-height: 66vh; }
.homepage-slideshow.use_screen_one_half{ min-height: 50vh; }
.homepage-slideshow.use_screen_one_third{ min-height: 33vh; }
.homepage-slideshow.use_screen_one_fifth{ min-height: 20vh; }

.background-size-cover--slide{
  display: block;
  background-size: cover;
  background-position: center center;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
}

.button-image-slide{
  display: block;
  width: 100%;
  &:focus {
    outline: 0;
    opacity: 0.8;
    padding-top: 2px;
  }
}

.slideshow__slide .content--centered{
  padding-left: 40px;
  padding-right: 40px;
}

/*================ Index Reviews ================*/

.index-reviews{
  position: relative;
  overflow: hidden;
  text-align: center;
}

.index-reviews .title--decorated {
  font-size: rem(27px);
}

.reviews{
  margin-top: 30px;
  position: relative;
}
.review__dots{
  position: absolute;
  right: -70px;
  z-index: 0;
  .dots__wrapper {
    width: 150px;
  }
}
.review__card{
  width: 100%;
  position: relative;
  z-index: 100;
}

.review__item{
  width: 85%;
  padding-left: 30px;
  padding-right: 15px;
  @include media-query($medium) {
    width: 45%;
  }
  @include media-query($large-up) {
    width: 33.33%;
    padding-left: 60px;
  }
}

.reviews--1 .review__item{
  width: 100%;
}
.reviews--2 .review__item{
  width: 85%;
  padding-left: 30px;
  padding-right: 15px;
  @include media-query($medium-up) {
    width: 50%;
  }
}

.review__image__align{
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: flex-start;
  padding-left: 25px;
  padding-left: 0;
  transition: all 0.3s linear;
}
.review__image__wrapper{
  position: relative;
  width: 100px;
  height: 100px;
  border-radius: 100px;
  display: block;
  overflow: hidden;
  margin-left: auto;
  margin-right: auto;
  @include box_shadow_light(4, $color-text);

  .team__button__wrapper &{
    width: 100px;
    height: 100px;
    border-radius: 100px;
  }
}
.review__name,
.review__title{
  margin-bottom: 0;
}
.review__name{
  margin-top: 15px;
}

.review__stars{
  margin-top: 0;
  margin-bottom: 10px;
  li{
    display: inline-block;
    color: $color-link;
    svg{
      width: 15px;
    }
  }
}

.review__card__text{
  transition: all 0.3s linear;
  padding: 50px 30px 30px 30px;
  margin-top: -50px;
  position: relative;
  background: $color-body-light;
}

.review__card__text__contents{
  position: relative;
  z-index: 10;
}
.index--gray .review__card__text{
  background: $color-body;
}

.decoration-modern .review__card__text{
  padding: 0px;
  margin-top: 0px;
  background: transparent !important;
  &:after{
    content: '';
    background: $color-body-light;
    right: 25px;
    left: 25px;
    top: -50px;
    bottom: -30px;
    position: absolute;
    overflow: hidden;
    z-index: 0;
  }
}
.decoration-modern .review__image__align{
  padding-left: 0px !important;
}

.decoration-modern .index--gray .review__card__text:after{
  background: $color-body;
}


.index--gray .review__card__text{
  background-color: $color-body;
}

.reviews:not(.reviews--1) .slide--left {
  .review__image__align{
    justify-content: flex-start;
    padding-left: 25px;
    padding-left: 0;
  }
  .review__card__text:after{
    right: 50px;
    left: 25px;
  }
}
.slide--center .review__card__text,
.reviews--1 .slide--left .review__card__text{
  text-align: center;
}
.slide--right {
  .review__image__align{
    justify-content: flex-end;
  }
  .review__card__text{
    text-align: right;
  }
  .review__card__text:after{
    right: 25px;
    left: 50px;
  }
}

@include media-query($small){
  .review__card__text{
    text-align: left !important;
    text-align: center !important;
    padding-right: 15px !important;
  }
  .review__image__align{
    justify-content: flex-start !important;
    padding-left: 25px;
  }
}


